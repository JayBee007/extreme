<h2 class="text-center">New Account</h2>

<div class="container">
  <div class="column">
    <div class="row">
      <form class="col-6 offset-3 col-form-label-lg" method="POST" action="/register">
        {{#each errorMessages}}
        <div class="alert alert-danger" role="alert">
          {{msg}}
        </div>
        {{/each}}
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" name="name" id="name" aria-describedby="namelHelp"
            placeholder="Your Name" value={{name}}>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="Your Email" value={{email}}>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Your password"
            value={{password}}>
        </div>
        <div class="form-group">
          <label for="repassword">Confirm Password</label>
          <input type="password" class="form-control" id="repassword" name="repassword"
            placeholder="Please enter the password once more" value={{repassword}}>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>